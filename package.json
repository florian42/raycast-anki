{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "raycast-anki",
  "title": "Raycast Anki",
  "description": "Review due Anki cards directly in Raycast via AnkiConnect.",
  "icon": "extension-icon.png",
  "author": "raycastflo",
  "platforms": [
    "macOS",
    "Windows"
  ],
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "study-command",
      "title": "Study",
      "description": "Review due Anki cards",
      "mode": "view",
      "preferences": [
        {
          "name": "deckName",
          "title": "Deck Name",
          "description": "Anki deck to review from",
          "type": "textfield",
          "required": true,
          "default": "My Deck"
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.104.5",
    "@raycast/utils": "^1.17.0",
    "@types/turndown": "^5.0.6",
    "turndown": "^7.2.2",
    "yanki-connect": "^3.2.3"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
